<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name = "hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name = "show_sql">true</property>
		<!-- Assume test is the database name -->
		<property name = "hibernate.connection.url">jdbc:mysql://localhost:3306/gym_management_db?serverTimezone=UTC</property>
		<property name = "hibernate.connection.username">root</property>
		<property name = "hibernate.connection.password"></property>

		<mapping class="package sn.esmt.gymManagement.models.Abonnement" />
		<mapping class="package sn.esmt.gymManagement.models.Carnet" />
		<mapping class="package sn.esmt.gymManagement.models.Client" />
		<mapping class="package sn.esmt.gymManagement.models.Paiement" />
		<mapping class="package sn.esmt.gymManagement.models.Privilege" />
		<mapping class="package sn.esmt.gymManagement.models.Role" />
		<mapping class="package sn.esmt.gymManagement.models.Utilisateur" />
		
	</session-factory>
</hibernate-configuration>